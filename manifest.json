{
  "manifest_version": 3,
  "name": "Online Worms",
  "version": "1.5.3",
  "description": "Customize wormate.io appearance and functionalities, team chat.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://wormate.io/*"],
      "js": ["jquery.min.js", "content.js"]
    },
    {
      "matches": ["https://wormworld.io/*"],
      "js": ["contentwwc.js"]
    }
  ],
  "host_permissions": [
      "https://wormate.io/*",
      "https://wormworld.io/*",
      "https://www.facebook.com/*",
      "https://www.paypal.com/*",
      "http://45.173.12.90:3000/*",
      "https://www.iconfinder.com/*",
      "http://localhost:3000/*",
      "http://localhost:3001/*"
    ],
    "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src *"
    },
  "web_accessible_resources": [
    {
      "resources": ["banner.png", "popup.js", "custom_game.js", "frame.html", "frame.js", "socket.io.min.js"],
      "matches": ["https://wormate.io/*"]
    }
  ]
}